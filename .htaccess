# Disable directory listing
Options -Indexes

# Set the default handler to index.php (if it exists) or index.html
# NEVER include server.js here as it will cause the source code to be displayed
DirectoryIndex index.php index.html

<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Forward all requests to the Node.js app if it's not a static file
  # The Hostinger Node.js selector handles the actual proxying.
  # We just need to ensure Apache doesn't try to handle it.
  
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.*)$ index.php [L]
</IfModule>
