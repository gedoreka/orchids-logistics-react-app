# This file is to prevent 403 errors on Hostinger by ensuring the server knows how to handle the requests.
# It disables directory listing and ensures requests are handled correctly.

Options -Indexes
DirectoryIndex server.js index.html index.php

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Forward all requests to the Node.js application if it's not a real file
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.*)$ server.js/$1 [L]
</IfModule>
